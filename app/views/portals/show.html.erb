<title><%= @portal.title %></title>


        <div class="page-header center">
			<h1><%= @portal.title %></h1>

			<% if @portal[:header].blank? %>
				<%= link_to image_tag("defaultheader.png", 
				:size=>"1000x200", alt: @portal[:title]), @portal[:slug] %>
			<% else %>
				<%= link_to image_tag(@portal[:header], alt: @portal[:title]), @portal[:slug] %>
			<% end %>
        </div>





<div class="row">
	<div class="span4">

			<div><%= image_tag("/assets/portals/" + @portal[:slug] + ".png", :size=>"200x200", alt: @portal[:title]) %></div>


<% if signed_in? %>
<div>
	<%= render 'hearts/heart_button', :portal => @portal %>
</div>
<% else %>
<button class="btn">Become a fan</button>
<!-- go to signup and track this page -->
<% end %>



		<div>
			<h2>Fans</h2>
			<% for user in @portal.users.limit(20) %>
			<%= link_to user.username, user_path(user) %>
			<% end %>

			View all (<%= @portal.users.count %>)
		</div>


		<div>
			<h2>Moderators</h2>
		</div>


		<div>
			<h2>Stats</h2>
			<ul>
				<li>Name: <%= @portal.title %></li>
			<li>Moderators: </li>
			<% @date = @portal.created_at %></li>
			<li>Created:  <%= @date.strftime("%B #{@date.day.ordinalize}, %Y") %></li>
			</ul>
		</div>

		<div>
			<h2>Latest Videos</h2>
		</div>


		<div>
			<h2>Pages</h2>
		</div>


		<div>
